<!doctypehtml>

<htmllang="en">
<head>
  <!--Requiredmetatags-->
  <metacharset="utf-8">
  <metaname="viewport"content="width=device-width,initial-scale=1,shrink-to-fit=no">

  <!--BootstrapCSS-->
  <link rel="stylesheet"href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css"integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4"crossorigin="anonymous">


  <title>Hello,world!</title>
</head>
<body>

<!-- BANNER -->
<div id="banner_image_div">

  <!-- BILDE HER -->
  <%=image_tag'kvadraturen_banner.jpg',id:'campus_banner'%>

  <!-- BANNER TEKST HER-->
  <div id="banner_text_div">
    <h1 id="klasse_tittel">campus</h1>
    <h2 id="campus_tittel">Kvadraturen</h2>
    <p id="info_banner">Høyskolen Kristiania Osloer en unik høyskole som holder til i moderne lokaler
      med historisk atmosfære midt i Oslo sentrum.<br>ELLER LISTE OM FAKULTETER HER</p>
  </div>

</div>

<!-- DELEN UNDER -->
<div class="container" id="body_div">

  <br>
  <!-- INFO, TELEFON, ADRESSE-->
  <h1 id="info_tittel">Info</h1>

  <div class="row">


    <!-- TELEFON -->
    <div class="col-md-4" id="info_div">

      <h2 class="tittel-info">Telefon</h2>
      <p>225 96 000</p>

    </div>

    <!-- ÅPNINGSTIDER -->
    <div class="col-md-4" id="info_div">

      <h2 class="tittel-info">Åpningstider</h2>
      <p>Man–fre:      07.30 – 23.00<br>
        Lør–søn:      09.00 – 17.00</p>

    </div>

    <!-- ADRESSE -->
    <div class="col-md-4">

      <h2 class="tittel-info">Adresse</h2>
      <p id="campus_adresse">Kirkegata 24-26<br>0153 Oslo<br>Norge</p>

    </div>

  </div>

  <div class="row">

    <!-- RØD BOKS KNAPPER -->
    <div class="col-md-6" id="farge-div">

      <h2 id="store-info-tittel">Nærområdet</h2>

      <!-- KNAPP 1 -->
      <button class="button">Matbutikker</button>

      <ul>
        <li>Matkroken</li>
        <li>en til</li>
        <li>pluss en til</li>

      </ul>

      <!-- KNAPP 2 -->
      <button class="button">Spisesteder</button>

      <ul>
        <li>Steen &amp; Strøm</li>
        <li>Ris Bolle</li>
        <li>Subway</li>

      </ul>

      <!-- KNAPP 3 -->
      <button class="button">Annet</button>

      <ul>
        <li>Matkroken</li>
        <li>en til</li>
        <li>pluss en til</li>

      </ul>


    </div>

    <!-- KART-->
    <div class="col-md-6">

      <div id="map-div">

        <%= image_tag'placeholder-map.png', id:'map_placeholder'%>

      </div>

    </div>

  </div>

  <div class="row">

    <!-- AUDITORIUM -->
    <div class="col-md-12">

      <h2>Auditorium</h2>

      <h3 class="offset-md-1">Info / Rom</h3>

    </div>

    <!-- ANNEN EKSTRA INFO -->
    <div class="col-md-12">

      <h2>Bibliotek</h2>

      <h3 class="offset-md-1">Adresse</h3>

    </div>

    <!-- ANNEN EKSTRA INFO -->
    <div class="col-md-12">

      <h2>Bokhandel</h2>

      <h3 class="offset-md-1">Info</h3>

    </div>


  </div> <!-- END ROW -->

</div> <!-- END CONTAINER-->

<!--OptionalJavaScript-->
<!--jQueryfirst,thenPopper.js,thenBootstrapJS-->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ"crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm"crossorigin="anonymous"></script>
</body>

