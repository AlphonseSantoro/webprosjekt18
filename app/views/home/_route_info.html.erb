<% @travel['TravelProposals'].each do |travelproposal| %>
  <div class="card card-body">
    <div class="row">
    <% travelproposal['Stages'].each do |stage| %>
      <% unless stage['Transportation'] == 0 %>
        <div class="col-md-1">
          <div class="row">
            <% case stage['Transportation'] %>
            <% when 7 %>
              <i class="fas fa-train mb-md-3"></i>
            <% when 2 %>
              <i class="fas fa-bus mb-md-3"></i>
            <% else %>
              <p></p>
            <% end %>
            <p class="ml-md-2"><%= stage['LineName'] %></p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="row">
            <%= stage['DepartureStop']['Name'] %>
          </div>
          <div class="row">
            <%= stage['ArrivalStop']['Name'] %>
          </div>
        </div>
      <% end %>
    <% end %>
    <div class="col-md-3">
      <div class="row">
        <p>ArrivalTime: </p><%= DateTime.parse(travelproposal['ArrivalTime']).strftime('%H:%M') %>
      </div>
      <div class="row">
        <p>DepartureTime: </p><%= DateTime.parse(travelproposal['DepartureTime']).strftime('%H:%M') %>
      </div>
    </div>
    </div>
  </div>
<% end %>

