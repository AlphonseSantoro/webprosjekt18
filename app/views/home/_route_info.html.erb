<div class="card card-header">
  <div class="row">
    <div class="card-body col-md-2 overflow">
      <h6 class="overflow"><%= t('logistics.route') %></h6>
    </div>
    <div class="card-body col-md-7 overflow">
      <h6 class="overflow"><%= t('logistics.departure') + " " + t('logistics.from_to') %></h6>
    </div>
    <div class="card-body col-md-3">
      <div class="row">
        <i class="fas fa-clock mr-md-2"></i>
        <h6 class="overflow"><%= t('logistics.from_to') %></h6>
      </div>
    </div>
  </div>
</div>
<!--onClick="drawRoute(<%#= @maps.route_info(travelproposal['Stages']).to_json %>);"-->
<% @travel['TravelProposals'].each do |travelproposal| %>
  <div class="card card-body" onclick="removeLine(); drawLine(<%= @maps.geometry(travelproposal['Stages']).to_json %>);">
    <% travelproposal['Stages'].each do |stage| %>
      <div class="row" >
<!--      <div class="row">-->
        <% if stage['Transportation'] == 0 && stage.length == 1 %>
          <div class="col-md-2">
            <div class="row">
              <div class="col-md-12 ml-md-4">
                <div class="row">
                  <%= image_tag 'walk-icon.png', class: 'walk' %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <% unless stage['Transportation'] == 0 %>
          <div class="col-md-2">
            <div class="row">
              <div class="col-md-12 ml-md-4">
                <div class="row">
                  <% case stage['Transportation'] %>
                  <% when 7 %>
                    <i class="fas fa-train"><p class="mt-md-1"><%= stage['LineName'] %></p></i>
                  <% when 2 %>
                    <i class="fas fa-bus"><p class="mt-md-1"><%= stage['LineName'] %></p></i>
                  <% else %>
                    <p></p>
                  <% end %>
                </div>
                <div class="row">
                  <i class="fas fa-arrow-down"></i>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-7">
            <div class="row ml-md-2">
              <%= stage['DepartureStop']['Name'] %>
            </div>
            <div class="row ml-md-2">
              <%= stage['ArrivalStop']['Name'] %>
            </div>
          </div>
          <div class="col-md-3">
            <div class="row ml-md-2">
              <%= DateTime.parse(travelproposal['DepartureTime']).strftime('%H:%M') %>
            </div>
            <div class="row ml-md-2">
              <%= DateTime.parse(travelproposal['ArrivalTime']).strftime('%H:%M') %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>
